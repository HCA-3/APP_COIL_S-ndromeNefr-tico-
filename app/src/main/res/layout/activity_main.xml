<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cosmos_blue"
    tools:context=".MainActivity">

    <!-- Contenedor principal -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="48dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Icono o logo -->
            <ImageView
                android:id="@+id/logo_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:background="@drawable/ic_launcher_background"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher_foreground" />

            <!-- Título de bienvenida -->
            <TextView
                android:id="@+id/welcome_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:text="@string/welcome"
                android:textColor="@color/cosmos_blue"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/language_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="@string/language_description"
                android:textColor="@color/cosmos_blue"
                android:textSize="16sp" />

            <!-- Título de selección -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/select_language"
                android:textColor="@color/cosmos_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Botón de Español -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_spanish"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@color/crimson_blaze"
                android:text="@string/spanish"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Botón de Inglés -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_english"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/blue_marble"
                android:text="@string/english"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>