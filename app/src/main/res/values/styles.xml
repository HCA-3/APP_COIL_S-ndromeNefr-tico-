<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base de la aplicaciÃ³n -->
    <style name="Theme.Coil_app" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cosmos_blue</item>
        <item name="colorPrimaryVariant">@color/blue_marble</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crimson_blaze</item>
        <item name="colorSecondaryVariant">@color/varden</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/cosmos_blue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorForeground">@color/cosmos_blue</item>
    </style>

    <!-- Tema claro -->
    <style name="Theme.Coil_app.Light" parent="Theme.Coil_app">
        <item name="colorPrimary">@color/cosmos_blue</item>
        <item name="colorPrimaryVariant">@color/blue_marble</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/crimson_blaze</item>
        <item name="colorSecondaryVariant">@color/varden</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/cosmos_blue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorForeground">@color/cosmos_blue</item>
    </style>

    <!-- Tema oscuro -->
    <style name="Theme.Coil_app.Dark" parent="Theme.Coil_app">
        <item name="colorPrimary">@color/blue_marble</item>
        <item name="colorPrimaryVariant">@color/cosmos_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/varden</item>
        <item name="colorSecondaryVariant">@color/crimson_blaze</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:colorForeground">@color/text_primary_dark</item>
    </style>

</resources>